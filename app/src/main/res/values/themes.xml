<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorX" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Dark.Theme" parent="Theme.CalculatorX">
        <item name="colorPrimary">@color/orange</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyActionBarDark" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Light.Theme" parent="Theme.CalculatorX">
        <item name="colorPrimary">@color/cian</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:statusBarColor">@color/cian</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/cian</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>